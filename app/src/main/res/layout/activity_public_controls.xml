<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PublicControlsActivity">

    <include
        android:id="@+id/public_controls_app_bar"
        layout="@layout/app_bar_layout"/>

    <SeekBar
        android:id="@+id/seekBar"
        android:layout_below="@+id/public_controls_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:max="60"
        android:progress="11"
        android:background="@color/green"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:progressDrawable="@drawable/seek_bar"
        android:thumb="@drawable/thumb"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat Font Size:"
        android:layout_below="@+id/seekBar"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/seekBar_text_size_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_alignParentEnd="true"
        android:text="11"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/switch_button_shows"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar_text_size_tv"
        android:layout_alignParentStart="true"
        android:text="Hide online and last seen status:"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/seekBar_text_size_tv"
        android:textOn="Hidden"
        android:textOff="Shown"
        android:text="Shown"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:background="@color/green"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/post_hidden_shown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switch_button_shows"
        android:layout_alignParentStart="true"
        android:text="Hide you're profile post:"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <Switch
        android:id="@+id/post_hidden_shown_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switch1"
        android:textOn="Hidden"
        android:textOff="Shown"
        android:text="Shown"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:background="@color/green"
        android:layout_marginRight="10dp"
        />

    <TextView
        android:id="@+id/friend_list_hidden_shown_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/post_hidden_shown_switch"
        android:layout_alignParentStart="true"
        android:text="Hide you're friend list:"
        android:textSize="16sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"/>

    <Switch
        android:id="@+id/friend_list_hidden_shown_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/post_hidden_shown_switch"
        android:textOn="Hidden"
        android:textOff="Shown"
        android:text="Shown"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:background="@color/green"
        android:layout_marginRight="10dp"
        />

</RelativeLayout>